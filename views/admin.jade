extends layout

block content
    header
      #cssmenu
        ul
          li
            a(href='/')
              span Home
          li
            a(href='/leaderboard')
              span Leaderboard
          li
            a(href='/logout')
              span Logout
    .main-body
      section#login-left
        h2 Create a New Level
        form(role='form', method='post', action='/levels/new')
          label
            input(type='number', name='level', required='')
            .label-text Level Number (Next: #{levels.length})
          label
            input(type='text', name='title', required='')
            .label-text Level Title
          label
            input(type='text', name='clue1', required='')
            .label-text Clue
          label
            input(type='text', name='answer', required='')
            .label-text Answer
          button Add Level
      section#login-right
        h2 Existing Levels
            ul
                each level in levels
                    li #{level.level} - #{level.title}
                        ul
                            li Page clue: #{level.clue1}
                            li Actions
                              ul
                                li
                                  a(href='/levels/#{level._id}/edit') Edit
                                li
                                  a(href='/levels/#{level._id}/delete') Delete
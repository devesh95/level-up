extends layout

block content
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    header
      #cssmenu
        ul
          li
            a(href='/')
              span Home
          li
            a(href='/leaderboard')
              span Leaderboard
          li
            a(href='/logout')
              span Logout
    .main-body
        a(href="/play") Play
        p Welcome #{user.firstname}!
        p Your email is #{user.email}
        p Your school is #{user.school}
        a(href="/logout") Logout
    footer
        p
            | ©   Privacy Policy   Contact Us   The Developers